<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/current_session_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp">

    <RelativeLayout
        android:id="@+id/current_session_date_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/current_session_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            tools:text="Mon. March 1"/>

        <TextView
            android:id="@+id/current_session_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_session_date"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="27sp"
            tools:text="4:00PM"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_toEndOf="@id/current_session_date_container"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/current_session_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/divider"
        android:layout_marginBottom="5dp"
        android:textSize="30sp"
        android:textColor="@color/colorText"
        tools:text="Session"/>

    <TextView
        android:id="@+id/current_session_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_session_title"
        android:layout_toEndOf="@id/divider"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        tools:text="Location"/>

    <LinearLayout
        android:id="@+id/current_session_tag_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_session_title"
        android:layout_toEndOf="@id/current_session_location"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/current_session_tags_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/current_session_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_session_location"
        android:layout_toEndOf="@id/divider"
        android:layout_marginTop="15dp"/>

</RelativeLayout>